{% extends 'AdminBundle::home_page.html.twig' %}

{% block body %}
	<div class="body content rows scroll-y">	
			<!-- Page header -->
		<div class="page-heading animated fadeInDownBig">
			<h1>Messagerie</h1>
		</div>
		<!-- End page header -->
		
		
		<!-- Begin Inbox -->
		<div class="box-info box-messages">
			<div class="row">
				<div class="col-md-2">
					<!-- Sidebar Message -->
					<div class="list-group menu-message">
					  <a href="{{ path('list_inbox') }}" class="list-group-item active">
						Boite de <strong>{{ nb_messages }}</strong> messages
					  </a>
					  <a href="{{ path('list_inbox_read_unread', {'mode': 'read'}) }}" class="list-group-item">Lu <strong>({{ nb_read }})</strong></a>
					  <a href="{{ path('list_inbox_read_unread', {'mode': 'unread'}) }}" class="list-group-item">Non lu <strong>({{ nb_unread }})</strong></a>
					</div>
				</div><!-- ENd div .col-md-2 -->
				
				
				<div class="col-md-10">
			        {{ form_start(form, {"attr": {"class": "form-horizontal form-creation"} }) }}
			        {{ form_errors(form) }}
			        <section>
						<div class="form-group">
			                {{ form_label(form.email, "Destinataire", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
			                {{ form_errors(form.email) }}
			                <div class="col-sm-10">
			                    {{ form_widget(form.email, {"attr": {"class": "form-control"} }) }}
			                </div>
			            </div>
			            
			            <div class="form-group">
			                {{ form_label(form.subject, "Sujet", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
			                {{ form_errors(form.subject) }}
			                <div class="col-sm-10">
			                    {{ form_widget(form.subject, {"attr": {"class": "form-control"} }) }}
			                </div>
			            </div>
			            
			            <div class="form-group">
			                {{ form_label(form.message, "Message", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
			                {{ form_errors(form.message) }}
			                <div class="col-sm-10">
			                    {{ form_widget(form.message, {"attr": {"class": "form-control"} }) }}
			                </div>
			            </div>
						
			            <button style="float: right" class="btn btn-success" type="submit">Envoyer</button>
						
					</section>	
					{{ form_end(form) }}
					<!-- End new message -->
				</div><!-- End div .col-md-10 -->
			</div><!-- End div .row -->
		</div><!-- End div .box-info -->
		<!-- End inbox -->
		
	</div>
{% endblock %}