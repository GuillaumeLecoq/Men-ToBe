	<!-- BODY -->
	<body class="tooltips">
	
	<!-- BEGIN PAGE -->
	<div class="container">
			
		<!-- Your logo goes here -->
		<div class="logo-brand header sidebar rows">
			<div class="logo">
				<h1><a href="{{ path('front_office_homepage') }}"><img src="{{ asset('bundles/frontoffice/img/logo.png') }}" alt="Logo">Retour sur le site</a></h1>
			</div>
		</div><!-- End div .header .sidebar .rows -->
	
		<!-- BEGIN SIDEBAR -->
		<div class="left side-menu">
			
			
            <div class="body rows scroll-y">
				
				<!-- Scrolling sidebar -->
                <div class="sidebar-inner slimscroller">
				
					<!-- User Session -->
					<div class="media">
						<a class="pull-left" href="{{ path('back_office_homepage') }}">
							{% if app.user.imageName is empty %}
								<img class="media-object img-circle" src="{{ asset('images/users/default.png') }}" alt="{{ app.user.firstname }}">
							{% else %}
								<img class="media-object img-circle" src="{{ app.request.basePath }}{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.firstname }}">
							{% endif %}
						</a>
						<div class="media-body">
							Bonjour,
							<h4 class="media-heading">
								<strong style="word-wrap: break-word;">
								{{ app.user.username }}
								</strong>
							</h4>
							<a class="md-trigger" data-modal="logout-modal-alt">Déconnexion</a>
						</div><!-- End div .media-body -->
					</div><!-- End div .media -->

					<!-- Sidebar menu -->				
					<div id="sidebar-menu">
						<ul>
							<li><a href="{{ path('back_office_homepage') }}"><i class="fa fa-home"></i> Accueil</a></li>
							<li><a href="#fakelink"><i class="fa fa-user"></i><i class="fa fa-angle-double-down i-right"></i> Mon profil</a>
								<ul>
									<li><a href="{{ path('back_office_profil_about') }}"><i class="fa fa-angle-right"></i> A propos</a></li>
									<li><a href="{{ path('back_office_profil_informations') }}"><i class="fa fa-angle-right"></i> Informations</a></li>
									<li><a href="{{ path('back_office_profil_preference') }}"><i class="fa fa-angle-right"></i> Préférences</a></li>
									{% if is_granted('ROLE_AUTHOR') %}
										<li><a href="{{ path('back_office_profil_paypal') }}"><i class="fa fa-angle-right"></i> Paypal</a></li>
									{% endif %}
								</ul>
							</li>
							{% if not is_granted('ROLE_AUTHOR') %}
								<li><a href="{{ path('back_office_become_author') }}"><i class="fa fa-pencil"></i> Devenir un Auteur</a></li>
							{% endif %}
							{% if is_granted('ROLE_AUTHOR') %}
								<li><a href="#fakelink"><i class="fa fa-book"></i><i class="fa fa-angle-double-down i-right"></i> Article</a>
									<ul>
										<li><a href="{{ path('back_office_list_article') }}"><i class="fa fa-angle-right"></i> Mes articles</a></li>
										<li><a href="{{ path('back_office_create_article') }}"><i class="fa fa-angle-right"></i> Ajouter</a></li>
										<li><a href="{{ path('back_office_tuto_article') }}"><i class="fa fa-angle-right"></i> Aide</a></li>
									</ul>
								</li>
							{% endif %}
							<li><a href="#fakelink"><i class="fa fa-group"></i><i class="fa fa-angle-double-down i-right"></i> Messagerie</a>
								<ul>
									<li><a href="{{ path('user_chat') }}"><i class="fa fa-angle-right"></i> Boite de messagerie</a></li>
								</ul>
							</li>
						</ul>
						<div class="clear"></div>
					</div><!-- End div #sidebar-menu -->
				</div><!-- End div .sidebar-inner .slimscroller -->
            </div><!-- End div .body .rows .scroll-y -->

        </div>
		<!-- END SIDEBAR -->



		<!-- BEGIN CONTENT -->
        <div class="right content-page">
		
			<!-- BEGIN CONTENT HEADER -->
            <div class="header content rows-content-header">
			
				<!-- Button mobile view to collapse sidebar menu -->
				<button class="button-menu-mobile show-sidebar">
					<i class="fa fa-bars"></i>
				</button>
				
				<!-- BEGIN NAVBAR CONTENT-->				
				<div class="navbar navbar-default" role="navigation">
					<div class="container" style="background: #000000">
						<!-- Navbar header -->
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<i class="fa fa-angle-double-down"></i>
							</button>
						</div><!-- End div .navbar-header -->
						
						<!-- Navbar collapse -->	
						<div class="navbar-collapse collapse">
						

							<!-- Right navbar -->
							<ul class="nav navbar-nav navbar-right top-navbar">

								<!-- Dropdown User session -->
								<li class="dropdown">
									<a href="#fakelink" class="dropdown-toggle" data-toggle="dropdown"><strong>{{ app.user.username }}</strong> <i class="fa fa-chevron-down i-xs"></i></a>
									<ul class="dropdown-menu animated half flipInX">
										<li><a href="{{ path('back_office_profil_about') }}">Mon profil</a></li>
										<li class="divider"></li>
										<li class="dropdown-header">Autre actions</li>
										<li><a href="#" class="md-trigger" data-modal="logout-modal">Déconnexion</a></li>
									</ul>
								</li>
								<!-- End Dropdown User session -->
							</ul>
						</div><!-- End div .navbar-collapse -->
					</div><!-- End div .container -->
				</div>
				<!-- END NAVBAR CONTENT-->
            </div>
			<!-- END CONTENT HEADER -->
			
			
			
			
			<!-- ============================================================== -->
			<!-- START YOUR CONTENT HERE -->
			<!-- ============================================================== -->
            <div class="body content rows scroll-y">
            {% block body %}

				<!-- Begin info box -->
				<div class="row">

					<!-- Visitor Info Box -->
					<div class="col-sm-3 col-xs-6">
						<!-- Box info -->
						<div class="box-info">
							<!-- Icon box -->
							<div class="icon-box">
								<span class="fa-stack">
								  <i class="fa fa-circle fa-stack-2x success"></i>
								  <i class="fa fa-money fa-stack-1x fa-inverse"></i>
								</span>
							</div><!-- End div .icon-box -->
							<!-- Text box -->
							<div class="text-box">
								<h3>{{ userTotalAmount }} €</h3>
								<p>GAINS</p>
							</div><!-- End div .text-box -->
							<div class="clear"></div>
						</div><!-- End div .info-box -->
					</div>
					<!-- End Visitor Info Box -->


					<!-- Orders Info Box -->
					<div class="col-sm-3 col-xs-6">
						<!-- Box info -->
						<div class="box-info">
							<!-- Icon box -->
							<div class="icon-box">
								<span class="fa-stack">
								  <i class="fa fa-circle fa-stack-2x danger"></i>
								  <i class="fa fa-coffee fa-stack-1x fa-inverse"></i>
								</span>
							</div><!-- End div .icon-box -->
							<!-- Text box -->
							<div class="text-box">
								<h3>{{ totalAuthor}}</h3>
								<p>AUTEURS</p>
							</div><!-- End div .text-box -->
							<div class="clear"></div>
						</div><!-- End div .info-box -->
					</div>
					<!-- End Orders Info Box -->


					<!-- Downloads Info Box -->
					<div class="col-sm-3 col-xs-6">
						<!-- Box info -->
						<div class="box-info">
							<!-- Icon box -->
							<div class="icon-box">
								<span class="fa-stack">
								  <i class="fa fa-circle fa-stack-2x info"></i>
								  <i class="fa fa-edit fa-stack-1x fa-inverse"></i>
								</span>
							</div><!-- End div .icon-box -->
							<!-- Text box -->
							<div class="text-box">
								<h3>{{ totalArticles }}</h3>
								<p>ARTICLES</p>
							</div><!-- End div .text-box -->
							<div class="clear"></div>
						</div><!-- End div .info-box -->
					</div>
					<!-- End Downloads Info Box -->


					<!-- Shipping Info Box -->
					<div class="col-sm-3 col-xs-6">
						<!-- Box info -->
						<div class="box-info">
							<!-- Icon box -->
							<div class="icon-box">
								<span class="fa-stack">
								  <i class="fa fa-circle fa-stack-2x warning"></i>
								  <i class="fa fa-users fa-stack-1x fa-inverse"></i>
								</span>
							</div><!-- End div .icon-box -->
							<!-- Text box -->
							<div class="text-box">
								<h3>{{ totalUser  }}</h3>
								<p>UTILISATEURS</p>
							</div><!-- End div .text-box -->
							<div class="clear"></div>
						</div><!-- End div .info-box -->
					</div>
					<!-- End Shipping Info Box -->
				</div>
				<!-- End of info box -->

				<div class="row">
					<div class="col-sm-6">
						<!-- Begin tab comment and popular posts -->
						<div class="box-info full">
							<!-- Tab comments and popular posts -->
							<ul class="nav nav-tabs nav-justified">
								<li class="active"><a href="#user-activities" data-toggle="tab"><i class="fa fa-laptop"></i> Historiques</a></li>
							</ul>

							<!-- Tab panes -->
							<div class="tab-content">

								<!-- Tab user activities -->
								<div class="tab-pane active animated fadeInRight" id="user-activities">
									<div class="scroll-user-widget">
										<ul class="media-list">
											{% for event in userEvents %}
												<li class="media">
													<a href="#fakelink">
														<p><strong>{{ event.message }}</strong>
															<br /><i>{{ event.date|date('Y-m-d H:i:s') }}</i></p>
													</a>
												</li>
											{% endfor %}
										</ul>
									</div><!-- End div .scroll-user-widget -->
								</div><!-- End div .tab-pane -->
								<!-- End Tab user activities -->
							</div><!-- End div .tab-content -->
						</div><!-- End div .box-info .full -->
						<!-- End tab comment and popular posts -->
					</div><!-- End div .col-sm-6 -->

				<div class="col-md-6">
					<!-- Begin timeline -->
					<h4>File d'actu</h4>
					<div class="the-timeline">
						<ul>
							{% for fileActu in fileActus  %}
								<li>
									<div class="the-date">
										<span>{{  fileActu.date|date('d') }}</span>
										<small>{{  fileActu.date|date|localizeddate('none', 'none', null, null, 'MMMM') }}</small>
									</div>
									<h4>{{ fileActu.name }}</h4>
									<p>
										{{  fileActu.resume|striptags }}
									</p>
								</li>
							{% endfor %}
						</ul>
					</div><!-- End div .the-timeline -->
					<!-- End timeline -->
				</div><!-- End div .col-sm-6 -->


				</div><!-- End div .row -->


			{% endblock %}

			<!-- Footer -->
			<footer>
			&copy; 2017 site <a href="{{ path('back_office_homepage') }}">Admin</a> de <a href="{{ path('back_office_homepage') }}">Men-ToBe</a>
			</footer>
			<!-- End Footer -->
			
            </div>

			<!-- ============================================================== -->
			<!-- END YOUR CONTENT HERE -->
			<!-- ============================================================== -->
			
			
        </div>
		<!-- END CONTENT -->

