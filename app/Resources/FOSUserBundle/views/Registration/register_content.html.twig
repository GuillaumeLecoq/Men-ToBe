{{ include("BackOfficeBundle:Header:header.html.twig") }}

{% trans_default_domain 'FOSUserBundle' %}

<!-- BODY -->
<body class="tooltips full-content">

    <div class="container">

        <!-- Begin Register Page -->
        <div class="full-content-center animated fadeInDownBig">
            <a href="#fakelink"><img src="{{ asset('bundles/frontoffice/img/logo.png') }}" class="logo-login img-circle" alt="Logo"></a>
            <div class="login-wrap">
                <div class="box-info">
                    <h2 class="text-center"><strong>Enregistrement</strong> d'un nouveau compte</h2>

                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        {{ form_errors(form) }}

                        <div class="form-group login-input">
                            <i class="fa fa-sign-in overlay"></i>
                            {{ form_widget(form.username, {'attr': {'class': 'form-control text-input', 'placeholder': 'Pseudo'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group login-input">
                            <i class="fa fa-user overlay"></i>
                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control text-input', 'placeholder': 'Nom'} }) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                        <div class="form-group login-input">
                            <i class="fa fa-user overlay"></i>
                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control text-input', 'placeholder': 'Prénom'} }) }}
                            {{ form_errors(form.firstname) }}
                        </div>
                        <div class="form-group login-input">
                            <i class="fa fa-envelope overlay"></i>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control text-input', 'placeholder': 'E-mail'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group login-input">
                            <i class="fa fa-key overlay"></i>
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control text-input', 'placeholder': 'Mot de passe'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group login-input">
                            <i class="fa fa-eye overlay"></i>
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control text-input', 'placeholder': 'Retaper le mot de passe'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>

                        <button type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-success btn-block"><i class="fa fa-rocket"></i>Enregistrement</button>

                    {{ form_end(form) }}

                </div>
                <p class="text-center"><a href="{{ path('for_user_security_login') }}"><i class="fa fa-sign-in"></i>Retourner à la page de connexion</a></p>
            </div>
        </div>
        <!-- End Register Page -->

    </div><!-- End div .container -->
    <!-- END PAGE -->
    {{ include("BackOfficeBundle:Js:javascript.html.twig") }}
    </body>
</html>
