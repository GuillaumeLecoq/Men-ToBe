{% extends 'BackOfficeBundle::home_page.html.twig' %}

{% block body %}
	<div class="body content rows scroll-y">	
			<!-- Page header -->
		<div class="page-heading animated fadeInDownBig">
			<h1>Messagerie</h1>
		</div>
		<!-- End page header -->
		
		
		<!-- Begin Inbox -->
		<div class="box-info box-messages">
			<div class="row">
				<div class="col-md-2">
					<!-- Sidebar Message -->
					<a href="new-message.html" class="btn btn-success btn-block"><i class="fa fa-edit"></i> Nouveau message</a>
					<div class="list-group menu-message">
					  <a href="{{ path('user_list_inbox') }}" class="list-group-item active">
						Boite de <strong>{{ nb_messages }}</strong> messages
					  </a>
					  <a href="{{ path('user_list_inbox_read_unread', {'mode': 'read'}) }}" class="list-group-item">Lu <strong>({{ nb_read }})</strong></a>
					  <a href="{{ path('user_list_inbox_read_unread', {'mode': 'unread'}) }}" class="list-group-item">Non lu <strong>({{ nb_unread }})</strong></a>
					</div>
				</div><!-- ENd div .col-md-2 -->
				
				
				<div class="col-md-10">
					<p class="text-right"><strong>{{ message.date|date("d/m/Y") }}</strong></p>
					<table class="table">
						<tbody>
							<tr>
								<td colspan="2">
									<a href="{{ path('user_reply_message', {'idMessage': message.id}) }}" class="btn btn-default btn-sm"><i class="fa fa-mail-reply"></i> RÃ©pondre</a>
									<a href="{{ path('user_delete_message', {'idMessage': message.id}) }}" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> Supprimer</a>
								</td>
							</tr>
							<tr>
								<td style="width: 100px;"><strong>De</strong></td>
								<td><a href="#fakelink">{{ message.name }}</a></td>
							</tr>
							<tr>
								<td><strong>Sujet</strong></td>
								<td>{{ message.subject }}</td>
							</tr>
							<tr>
								<td colspan="2">
								<p style="text-align: justify">
								{{ message.message }}
								</p>
								</td>
							</tr>
						</tbody>
					</table>
				</div><!-- End div .col-md-10 -->
			</div><!-- End div .row -->
		</div><!-- End div .box-info -->
		<!-- End inbox -->
		
	</div>
{% endblock %}