{% extends 'AdminBundle::home_page.html.twig' %}

{% block body %}

    <!-- Page header -->
    <div class="page-heading animated fadeInDownBig">
        <h1>Ajout d'un <strong>utilisateur</strong></h1>
    </div>
    <!-- End page header -->


    <div class="box-info">

        {{ form_start(form, {"attr": {"class": "form-horizontal form-creation"} }) }}
        {{ form_errors(form) }}

        <section>

            <div class="form-group">
                <label class="col-sm-2 control-label">Pseudo</label>
                <div class="col-sm-10">
                    {{ form_widget(form.username, {"attr": {"class": "form-control"} }) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Nom</label>
                <div class="col-sm-10">
                    {{ form_widget(form.lastname, {"attr": {"class": "form-control"} }) }}
                    {{ form_errors(form.lastname) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Pr√©nom</label>
                <div class="col-sm-10">
                    {{ form_widget(form.firstname, {"attr": {"class": "form-control"} }) }}
                    {{ form_errors(form.firstname) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">E-Mail</label>
                <div class="col-sm-10">
                    {{ form_widget(form.email, {"attr": {"class": "form-control"} }) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="form-group login-input">
                <label class="col-sm-2 control-label"><i class="fa fa-key overlay"></i> Mot de passe</label>
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control text-input', 'placeholder': 'Mot de passe'}}) }}
                    {{ form_errors(form.plainPassword) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="form-group login-input">
                <label class="col-sm-2 control-label"><i class="fa fa-eye overlay"></i> Mot de passe</label>
                <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control text-input', 'placeholder': 'Retaper le mot de passe'}}) }}
                {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Roles</label>
                <div class="col-sm-10">
                    <label style="padding-left: 0px;" class="checkbox-inline">{{ form_widget(form.roles) }}</label>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Etat</label>
                <div class="col-sm-10">
                    <label style="padding-left: 0px;" class="checkbox-inline">{{ form_widget(form.enabled) }}</label>
                </div>
            </div>


        </section>

        <button style="float: right" class="btn btn-primary" type="submit">Enregistrer</button>

        {{ form_end(form) }}

    </div>

{% endblock %}