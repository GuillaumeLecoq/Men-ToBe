{% extends 'AdminBundle::home_page.html.twig' %}

{% block body %}

    <!-- Page header -->
    <div class="page-heading animated fadeInDownBig">
        <h1>Modification d'un Tag</h1>
    </div>
    <!-- End page header -->


    <div class="box-info">

        {{ form_start(form, {"attr": {"class": "form-horizontal form-creation"} }) }}
            {{ form_errors(form) }}

            <section>
                <div class="form-group">
                    {{ form_label(form.name, "Titre du Tag", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
                    {{ form_errors(form.name) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {"value": tag.name, "attr": {"class": "form-control", "placeholder": tag.name} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Image du Tag</label>
                    <div class="col-sm-10">
                        <img src="{{ tag.imageUrl }}" style="height: auto;width: 100%;">
                    </div>
                </div>

                <!-- Rename image if we want -->
                <div class="form-group">
                    <label class="col-sm-2 control-label">Renommer l'image du Tag</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.imageUrl, {"value": tag.imageUrl, "attr": {"class": "form-control", "placeholder": tag.name} }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.name, "Renommer Tag", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
                    {{ form_errors(form.name) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.name, {"value": tag.name, "attr": {"class": "form-control", "placeholder": tag.name} }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.category, "Sélectionner la catégorie", {"label_attr": {"class": "col-sm-2 control-label"} }) }}
                    {{ form_errors(form.category) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.category, {"attr": {"class": "form-control"} }) }}
                    </div>
                </div>
            </section>

            <button style="float: right" class="btn btn-primary" type="submit">Enregistrer</button>

        {{ form_end(form) }}

    </div>

{% endblock %}